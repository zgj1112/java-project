<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="steven.test.project.mapper.DeptMapper">
    <!-- 获取部门 -->
    <!-- 分页 + 模糊查询 -->
    <select id="getDeptList" resultType="steven.test.project.zhao.Dept">
        SELECT *
        FROM dept
        <where>
            <if test="name != null and name != ''">
                AND name LIKE CONCAT('%', #{name}, '%')
            </if>
        </where>
        ORDER BY id ASC
        LIMIT #{offset}, #{pageSize}
    </select>

    <!-- 统计总数 -->
    <select id="countDepts" resultType="long">
        SELECT COUNT(*) FROM dept
        <where>
            <if test="name != null and name != ''">
                AND name LIKE CONCAT('%', #{name}, '%')
            </if>
        </where>
    </select>

    <!-- 新增部门 -->
    <insert id="insertDept" parameterType="steven.test.project.zhao.Dept" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO dept (name, count, remark)
        VALUES (#{dept.name}, #{dept.count}, #{dept.remark})
    </insert>

    <!-- 修改部门 -->
    <update id="updateDept">
        UPDATE dept
        <set>
            <if test="dept.name != null">name = #{dept.name},</if>
            <if test="dept.count != null">count = #{dept.count},</if>
            <if test="dept.remark != null">remark = #{dept.remark},</if>
            update_time = NOW()
        </set>
        WHERE id = #{dept.id}
    </update>

    <!-- 删除部门 -->
    <delete id="deleteById" parameterType="long">
        DELETE FROM dept WHERE id = #{id}
    </delete>

</mapper>
